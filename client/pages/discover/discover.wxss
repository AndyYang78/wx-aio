
page,
.page,
.page__bd{
    height: 100%;
}
.page__bd{
    padding-bottom: 0;
}
.weui-tab__content{
    padding-top: 60px;
    text-align: center;
}

.page__hd.location {
	color: #fff;
	font-size: 30rpx;
	line-height: 40rpx;
	min-width: 100rpx;
	max-width: 340rpx;
	padding: 10rpx 20rpx 10rpx 10rpx;
	border-radius: 30rpx;
	/*background: rgba(0,0,0,0.3);*/
	margin-right: 20rpx;
	vertical-align: middle;
}

.page__hd .icon {
	width: 40rpx;
	height: 40rpx;
	vertical-align: top;
}

.choiceType{
	display: inline-flex;
	flex-direction: row ;
	flex-wrap: nowrap;
	align-content:space-around
}

.mask{
 width: 100%;
 height: 100%;
 position: fixed;
 top: 0px;
 background-color:rgba(0,0,0,0.5);
}

.swiper-tab{
  width: 100%; 
  border-bottom: 2rpx solid #777777; 
  text-align: center; 
  line-height: 80rpx;
}
.swiper-tab-list{
  font-size: 30rpx; 
  display: inline-block; 
  width: 40%; 
  color: #777777; 
}
.on{
  color: purple; 
  font-weight:bold;
  border-bottom: 5rpx solid purple;
}
