.card {
  box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.2), 0 10px 30px 0 rgba(0, 0, 0, 0.19);
  text-align: center;
  color:white;
  background-color:white;
  margin:10px
}

.card_header {
    background-color:#4CAF50;
    padding: 5px;
    font-size: 26px;
}

.card_footer {
  background-color:white;
  padding: 5px;
  color:black;
  font-size: 12px;
}

.card_v {
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
  text-align: center;
  color:black;
